#!/bin/bash

#PBS -N "LakWasMe74_LOW10_2_samtools"
#PBS -d /gscratch/lidstrom/meta4/workspace/LakWasMe74_LOW10_2/bwa
#PBS -l walltime=999:99:99,mem=2gb,feature=8core,nodes=1:ppn=8
#PBS -W umask=002
#PBS -W group_list=hyak-lidstrom
#PBS -M dacb@uw.edu,jmatsen@uw.edu
#PBS -m abe
#PBS -o samtools.log
#PBS -e samtools.err

/gscratch/lidstrom/software/samtools/bin/samtools view -bt /gscratch/lidstrom/meta4/data/isolate_genomes.fasta -o LakWasMe74_LOW10_2.bam LakWasMe74_LOW10_2.sam
/gscratch/lidstrom/software/samtools/bin/samtools sort LakWasMe74_LOW10_2.bam LakWasMe74_LOW10_2.sorted
/gscratch/lidstrom/software/samtools/bin/samtools index LakWasMe74_LOW10_2.sorted.bam
/gscratch/lidstrom/software/htseq/bin/htseq-count -m intersection-nonempty -s no -t gene -i ID LakWasMe74_LOW10_2.sam /gscratch/lidstrom/meta4/data/isolate_genomes.gbk.gff > LakWasMe74_LOW10_2.summary.dat
\rm -r LakWasMe74_LOW10_2.bam
